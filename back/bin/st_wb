#!/usr/bin/env ruby
$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
require 'workbench_path_analyzer'
pwd = ENV["PWD"]
host_name = ENV["HOSTNAME"]
fail "can not get $HOSTNAME" unless host_name
user_name = ENV["USER"]
fail "can not get $USER" unless user_name
system(WorkbenchPathAnalyzer.generate_command(pwd, host_name, user_name))
